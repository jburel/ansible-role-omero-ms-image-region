<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${application.home:-.}/logs/omero-ms.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${application.home:-.}/logs/omero-ms.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.glencoesoftware.omero.ms" level="{{ log_evel }}"/>
  <logger name="loci" level="debug"/><!-- Bio-Formats -->
  <logger name="loci.formats.Memoizer" level="{{ log_evel }}"/><!-- Bio-Formats memoizer -->

  <root level="{{ log_evel }}">
    <appender-ref ref="FILE" />
  </root>
</configuration>
